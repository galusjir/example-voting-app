pipeline {
    agent any

    tools {
      nodejs 'NodeJS 8.9.0'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Compiling voting app'
                dir('result') {
                    npm install
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing voting app'
                dir('result') {
                    npm install
                    npm test
                }
            }
        }

        
    }
}
