pipeline {
    agent any

    tools {
      nodejs 'NodeJS 8.9.0'
    }

    stages {
        stage('Build') {
            when {
                changeset '**/result/*.js'
            }
            steps {
                echo 'Compiling voting app'
                dir('result') {
                    sh 'npm install' 
                }
            }
        }

        stage('Test') {
            when {
                changeset '**/result/*.js'
            }
            
            steps {
                echo 'Testing voting app'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }

        
    }
}
